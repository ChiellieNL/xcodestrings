{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "strings",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		}
	],
	"repository": {
		"keywords": {
			"name": "keyword.control",
			"begin": "^\"",
			"end": "(?<!\\\\)\"(?=\\s*=)",
			"patterns": [
				{
					"name": "storage",
					"match": "%[.0-9]*[$]?([fiduxogc@]|ld|lu|lx)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "(?<!\\\\)\"",
			"patterns": [
				{
					"name": "storage",
					"match": "%[.0-9]*[$]?([fiduxogc@]|ld|lu|lx)"
				}
			]
		},
		"comment": {
			"name": "comment",
			"begin": "/\\*",
			"end": "\\*/"
		}
	},
	"scopeName": "source.strings"
}
